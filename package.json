{
  "name": "scrabble-quiz",
  "version": "1.0.0",
  "description": "Flash card quiz app to train Scrabble words",
  "engines": {
    "node": ">=8.3.0"
  },
  "scripts": {
    "start": "SET NODE_ENV=production& node server.js",
    "start:dev": "SET NODE_ENV=development& nodemon server.js",
    "start:prod": "SET NODE_ENV=production& nodemon server.js",
    "start:test": "SET NODE_ENV=testing& nodemon server.js",
    "debug": "ndb server.js",
    "debug:prod": "SET NODE_ENV=production& ndb server.js",
    "watch:js": "parcel watch ./public/js/index.js --dist-dir ./public/js/bundled",
    "build:js": "parcel build ./public/js/index.js --dist-dir ./public/js/bundled",
    "tailwind:build": "postcss public/styles/tailwind.css -o public/styles/style.css",
    "tailwind:watch": "postcss public/styles/tailwind.css -w -o public/styles/style.css",
    "test": "NODE_ENV=testing mocha --recursive --exit --timeout 10000",
    "import:data": "node dev-data/data/import-dev-data.js --import",
    "delete:data": "node dev-data/data/import-dev-data.js --delete",
    "import:testdata": "node dev-data/test-data/import-dev-test-data.js --import",
    "delete:testdata": "node dev-data/test-data/import-dev-test-data.js --delete"
  },
  "author": "Holland Ninow",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.7.0",
    "helmet": "^6.0.1",
    "hpp": "^0.2.3",
    "html-to-text": "^9.0.3",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^6.8.1",
    "morgan": "^1.10.0",
    "nodemailer": "^6.8.0",
    "postcss-cli": "^10.1.0",
    "pug": "^3.0.2",
    "rewire": "^6.0.0",
    "validator": "^13.7.0",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.20.7",
    "@babel/core": "^7.20.12",
    "@babel/node": "^7.20.7",
    "@babel/preset-env": "^7.20.2",
    "@babel/register": "^7.18.9",
    "@prettier/plugin-pug": "^2.4.1",
    "chai": "^4.3.7",
    "eslint": "^8.30.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-chai-friendly": "^0.7.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-mocha": "^10.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.11",
    "mocha": "^10.2.0",
    "parcel": "^2.8.2",
    "prettier": "^2.8.1",
    "prettier-plugin-tailwindcss": "^0.2.4",
    "supertest": "^6.3.3"
  }
}
